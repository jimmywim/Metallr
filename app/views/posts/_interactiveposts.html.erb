<div class="span4">
	<h1>Metallr</h1>

	<% if user_signed_in? %>
	  <em>
	    Welcome <%= current_user.username %>
	  </em>

	  <div class="row-fluid">
	    <%= render :partial => 'new', :locals => { :f => @post} %>
	  </div>
	<% else %>

	<% end %>
</div>

<div class="span6">
	<section id="posts-listing">
		<% if @posts.count > 0 %>
			<% @posts.each do |post| %>
			<%= render 'shared/post', :post => post %>
			<% end %>
			<%= will_paginate @posts, :renderer => BootstrapPagination::Rails %>
		<% else %>
			No posts here!
		<% end %>
	</section>
</div>
