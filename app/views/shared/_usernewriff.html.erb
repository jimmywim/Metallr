<% if user_signed_in? %>
	<div class="well">
		<em>
			Welcome <%= current_user.username %>
		</em>

		<div class="row-fluid user-stats">
			<%= image_tag current_user.avatar.url(:medium), :class => "user_profile_pic" %>
			<%= link_to pluralize(current_user.idols.count, "idol"), idols_path %> <br />
			<%= link_to pluralize(current_user.groupies.count, "groupie"), groupies_path %> <br />
			<%= link_to pluralize(current_user.posts.count, "riff"), posts_my_path %>
		</div>	

		<div class="row-fluid">
			<%= render :partial => 'new', :locals => { :f => @post} %>
		</div>
	</div>
	<% else %>

<% end %>