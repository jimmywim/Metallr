<article>

	<div class="well">
		<p>
			<i class="post-user-avatar icon-user glyph">

			</i>
			<span class="post-user">
				<% if post.user.nil? %>
					<strong>Unknown user</strong>
				<% else %>
					<%= link_to post.user.username, post.user %>
				<% end %>
				:
			</span>
			<span class="post-timestamp">
				<em>
					<%= post.created_at.strftime("%m/%d/%Y - %I:%M %p") %>
				</em>
			</span>
			<div>
				<%= post.content %>
			</div>
		</p>
	</div>
	<div class="">
		<ul class="nav nav-pills">
			<li>
 				<td><%= link_to 'Show', post %></td>
			</li>

			<% unless post.user.nil? %>
				<li>
						<a href="#" class="reply_link" 
							data-reply-to="<%= post.user.username %>"
							data-reply-post="<%= post.id %>">
							Reply
						</a>
				</li>
			<% end %>

			<% if user_signed_in? %>
				<li>
					<td><%= link_to 'Edit', edit_post_path(post) if admin? or post.user.id == current_user.id %></td>
				</li>
				<li>
					 <td><%= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true, :class => "delete_post" if admin? or post.user.id == current_user.id %></td>
				</li>

			<% end %>
		</ul>
	</div>
</article>